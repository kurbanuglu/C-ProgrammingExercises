#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main() {
	
	int i,sayi;
	int faktoryel=1;
	
	printf("faktoryeli alinacak sayi: ");
	scanf("%d",&sayi);
	
	for(i=1;i<=sayi;i++)
	{
		faktoryel=faktoryel*i;
	}
	printf("sonucunuz: %d",faktoryel);
	
	
	
	return 0;
}
