#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main() {
	
	int su, kola, bilet, misir, toplam;
	
	printf("FIYAT LISTESI \n\n");
	
	printf("misir:1\n");
	printf("su:2\n");
	printf("kola:3\n");
	printf("bilet:4\n\n");
	
	printf("Ne almak istersiniz?\n");
	
	printf("misir adedi: ");
	scanf("%d",&misir);
	
	printf("su adedi: ");
	scanf("%d",&su);
	
	printf("kola adedi: ");
	scanf("%d",&kola);
	
	printf("bilet adedi: ");
	scanf("%d",&bilet);
	
	toplam=(misir*1)+(su*2)+(kola*3)+(bilet*4);
	
	printf("Borcunuz: %d",toplam);
		
	
	
	
	
	
	
	
	return 0;
}
