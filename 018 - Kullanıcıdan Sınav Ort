  int main() {
  	
  	int sinav1,sinav2,sinav3,proje,ort;
  	
  	
  	printf("1.sinaviniz:  ");
  	scanf(" %d",&sinav1);
  	
  	printf("2.sinaviniz:  ");
  	scanf(" %d",&sinav2);
  	
  	printf("3.sinaviniz:  ");
  	scanf(" %d",&sinav3);
  	
  	printf("proje notunuz:  ");
  	scanf(" %d",&proje);
  	
  	
  	ort=(sinav1+sinav2+sinav3+proje)/4;
  	
  	printf("ortalamaniz: %d",ort);
	
	
	
	
	
	
	
	
	return 0;
}
