int main() {
	
	float sinav1,sinav2,sinav3,ort;
	
	sinav1=75;
	sinav2=80;
	sinav3=81;
	
	printf("1.sinaviniz: %f \n",&sinav1);
	
    printf("2.sinaviniz: %f \n",&sinav2);
    
    printf("3.sinaviniz: %f \n",&sinav3);
    
    
    ort=(sinav1+sinav2+sinav3)/3;
    
    printf("ortalamaniz: %f",ort);
	
	
	
	
	return 0;
}
