#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main() {
	
	int sayi1,sayi2,sonuc,secim,pi;
	
	sayi1=12;
	sayi2=16;
	pi=3;
	
	
	printf("Matematik Menusu\n\n");
	printf("**********************\n\n");
	
	printf("1-Karede alan ve cevre hesabi\n");
	printf("2-Girilen sayinin kupu\n");
	printf("3-Cemberde alan ve cevre hesabi\n");
	printf("4-5x2+7x+9 x gore islemin sonucu\n");
	printf("5-Dikdortgende alan ve cevre hesabi\n\n");
	
	printf("isleminizi secin: ");
	scanf("%d",&secim);
	
    switch(secim)
    {
    	case 1:
    		printf("Karenin alani: %d\n",(sayi1*sayi1));
    		printf("Karenin cevresi: %d",(sayi1*4));
    		break;
    		
    	case 2:
		    printf("Girilen sayinin kupu: %d",(sayi1*sayi1*sayi1));
		    break;
		    
	    case 3:
	    	printf("Cemberin alani: %d",(pi*sayi1*sayi1));
	    	break;
	    	
	    case 4:
	    	printf("islemin sonucu: %d",(5*sayi1*sayi1+7*sayi1+9));
	    	break;
	    	
	    case 5:
	    	printf("Dikdortgenin alani: %d\n",(sayi1*sayi2));
	    	printf("Dikdortgenin cevresi: %d",(sayi1*2+sayi2*2));
	    	break;
	    	
	}


	
	return 0;
}
